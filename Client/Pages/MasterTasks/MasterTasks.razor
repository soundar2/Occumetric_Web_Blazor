@page "/masterTasks/industry/{IndustryId:int}"
@using Occumetric.Shared
@inject HttpClient _httpClient
@inject ICommonHttpService _commonHttpService
<h3>Master Tasks</h3>

<p><b>@_errorMessage</b></p>
<a href="/masterTasks/create" class="btn btn-primary">Create Master Task</a>
<h3>Result</h3>
<button @onclick="FetchData">Fetch Data</button>
@if (_masterTaskViewModels?.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <td>
                    No.
                </td>
                <th>Id</th>
                <th>Name</th>
                <th>Categories</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in _masterTaskViewModels)
            {
                <tr>
                    <td>
                        @(++_rowNo)
                    </td>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @foreach (var tcv in item.TaskCategoryViewModels)
                        {
                            @tcv.Name
                            <br />
                        }
                    </td>
                    <td>
                        <a href="@($"/masterTasks/update/{item.Id}")" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There are no records to show.</p>
}
@code {
    [Parameter] public int IndustryId { get; set; }
    private int _rowNo = 0;
    private List<MasterTaskViewModel> _masterTaskViewModels { get; set; }
    private string _errorMessage = "";

    protected async override void OnInitialized()
    {
        base.OnInitialized();
        _masterTaskViewModels = new List<MasterTaskViewModel>();
        await FetchData();

    }
    private async Task FetchData()
    {
        try
        {
            var response = await _commonHttpService.GetMasterTasksForIndustry(IndustryId);
            _masterTaskViewModels = await _httpClient.GetFromJsonAsync<List<MasterTaskViewModel>>($"api/v1/masterTasks/industry/{IndustryId}");
            _rowNo = 0;
            StateHasChanged();
        }
        catch (Exception e)
        {
            Console.WriteLine("Exception");
            Console.WriteLine(e.Message);
            _errorMessage = e.Message;

        }
    }
}
